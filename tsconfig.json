{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true
	},
	"include": ["/**/*.ts"],
	"exclude": ["node_modules"]
}
